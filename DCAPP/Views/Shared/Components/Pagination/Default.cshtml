@model PaginationModel

<div class="text-center">
    <nav aria-label="...">
        <ul class="pagination">
            <li class="page-item @(Model.HasPrev ? "" : "disabled")"><a
                    href="?currentPage=@(Model.CurrentPage - 1)&pageSize=@Model.PageSize" class="page-link">Geri</a>
            </li>
            @for (int i = 0; i < Model.PageCount; i++)
            {
                <li class="page-item @(i == Model.CurrentPage - 1 ? "active" : "")"><a class="page-link"
                        href="?currentPage=@(i + 1)&pageSize=@Model.PageSize">@(i + 1)</a>
                </li>
            }
            <li class="page-item"><a class="page-link @(Model.HasNext ? "" : "disabled")"
                    href="?currentPage=@(Model.CurrentPage + 1)&pageSize=@Model.PageSize">Ä°leri</a></li>
        </ul>
    </nav>
</div>