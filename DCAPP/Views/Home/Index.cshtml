@{
    ViewData["Title"] = "Anasayfa";
}

<div class="text-center container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card h-100">
                <img src="https://cdn-icons-png.flaticon.com/512/2771/2771457.png"
                    style="display: block; margin: 0 auto; width:150px; height:auto" class="img-fluid rounded"
                    alt="...">
                <div class="card-body">
                    <h5 class="card-title" style="font-size: 32px;">Klinikler</h5>
                    <p class="card-text" style="font-size: 32px;">@await Component.InvokeAsync("CountOfAny", "clinics")
                    </p>
                    <a asp-controller="Clinics" class="btn btn-primary">Detay</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <img src="https://cdn-icons-png.flaticon.com/512/3467/3467825.png"
                    style="display: block; margin: 0 auto; width:150px; height:auto" class="img-fluid rounded"
                    alt="...">
                <div class="card-body">
                    <h5 class="card-title" style="font-size: 32px;">Hekimler</h5>
                    <p class="card-text" style="font-size: 32px;">@await Component.InvokeAsync("CountOfAny", "dentists")
                    </p>
                    <a asp-controller="Dentists" class="btn btn-primary">Detay</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100">
                <img src="https://cdn-icons-png.flaticon.com/512/1512/1512910.png"
                    style="display: block; margin: 0 auto; width:150px; height:auto" class="img-fluid rounded"
                    alt="...">
                <div class="card-body">
                    <h5 class="card-title" style="font-size: 32px;">Üyeler</h5>
                    <p class="card-text" style="font-size: 32px;">@await Component.InvokeAsync("CountOfAny",
                                                "customers")</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="text-center container mt-4">
    <div class="card">
        <h3 class="card-title mt-2">Randevu al</h3>
        <div class="card-body">
            Web sitemize üye olarak randevu alabilirsiniz.
        </div>
    </div>
</div>
