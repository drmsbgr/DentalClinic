@{
    ViewData["Title"] = "Kayıt Ol";
}

@model RegisterViewModel

<div>
    <h1 class="display-4">Kayıt ol</h1>
    <div>
        <div class="text-danger" asp-validation-summary="All"></div>
    </div>
    <form asp-action="Register" method="post">
        <div class="form-floating mb-3">
            <input type="text" required asp-for="FirstName" class="form-control" id="firstNameInput" placeholder="Ad">
            <label for="firstNameInput">Ad</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" required asp-for="LastName" class="form-control" id="lastNameInput" placeholder="Soyad">
            <label for="lastNameInput">Soyad</label>
        </div>
        <div class="form-floating mb-3">
            <input type="text" required asp-for="Username" class="form-control" id="usernameInput"
                placeholder="test123">
            <label for="usernameInput">Kullanıcı Adı</label>
        </div>
        <div class="form-floating mb-3">
            <input type="email" asp-for="Email" class="form-control" id="emailInput" placeholder="name@example.com">
            <label for="emailInput">E-posta Adresi</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" asp-for="Password" class="form-control" id="passwordInput" placeholder="*****">
            <label for="passwordInput">Şifre</label>
        </div>
        <div class="form-floating mb-3">
            <input type="password" asp-for="ConfirmPassword" class="form-control" id="confirmPasswordInput"
                placeholder="*****">
            <label for="confirmPasswordInput">Şifre Doğrulama</label>
        </div>
        <button type="submit" class="btn btn-primary">Kayıt ol</button>
    </form>
</div>
